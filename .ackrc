#Always color
--color

#common files for rails projects
--type-add=css=scss
--type-add=eruby=erb
--type-add=cucumber=.feature
--type-add=ruby=.haml,.rselm,.feature,.ru,.lock
--type-set=coffeescript=.coffee
--type-set=coffee=.coffee

#common files for node projects
--ignore-dir=node_modules
--type-set=coffee=.coffee
--type-set=jade=.jade
--type-set=feature=.feature
--type-set=json=.json

--ignore-file=ext:log
--ignore-file=is:tags
--ignore-dir=is:rails
